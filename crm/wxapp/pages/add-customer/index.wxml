    <view style="height: 80px"></view>
    <view class="submit-wrapper">
        <van-button wx:if="{{pageFlag==1}}" bind:click="submitNow" size="large" color="#429488">提交</van-button>
        <van-button wx:else bind:click="editNow" size="large" color="#429488">提交修改</van-button>
    </view>
</view>
<!--本人的出生日期框-->
<van-popup
        show="{{ myBirthdayModalVisible }}"
        position="bottom"
        bind:close="onCloseMyBirthdayModal"
>
    <van-datetime-picker
            type="date"
            value="{{ currentDate }}"
            bind:confirm="onConfirmMyBirthday"
            bind:cancel="onCloseMyBirthdayModal"
            min-date="{{ minDate }}"
            formatter="{{ formatter }}"
    />
</van-popup>