.item-wrap{
  padding: 20rpx;
}
.description{
  width: 600rpx;
  height: 260rpx;
  padding: 20rpx;
  font-size: 28rpx;
  color: #000;
  border-radius: 5rpx;
  background: #fff;
}
.txt{
  padding: 20rpx 0;
}

.addImg{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  width: 600rpx;
  height: 200rpx;
}
.addTxt{
  display: flex;
  justify-content: flex-start;
}
.addTxt image{
  margin-right: 20rpx;
  height: 160rpx;
  width: 160rpx;
  position: relative;
  border: 2rpx solid #666;
}
.addTxt image text,.video-txt{
  position: absolute;
  top: 0;
  right: 0;
  width: 40rpx;
  height: 40rpx;
  background: #f93;
  color: #fff;
  text-align: center;
  line-height: 40rpx;
  font-size: 32rpx;
  z-index: 10;
}
.item-ask-video image{
  height: 160rpx;
  width: 160rpx;
}
.video-wrap{
  width: 600rpx;
  height: 250rpx;
  position: relative;
  }
  video{
  width: 600rpx;
  height: 250rpx;
  }
  .speak-btn{
    display: flex;
    justify-content: space-between;
  }
  .speak-btn .btn{
    width: 140rpx;
    text-align: center;
    background: #f93;
    color: #fff;
    font-size: 24rpx;
  }
  .saveQuestion{
    background: #f93;
    color: #fff;
    font-size: 28rpx;
    width: 440rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    margin: 40rpx auto;
  }
modal .item-til{
  padding-bottom: 20rpx;
  text-align: center;
  color: #000;
  font-size: 28rpx;
}
.pay-box{
  height: 100rpx;
  display: flex;
  justify-content: space-between;
}
.pay-left{
  flex-direction: column;
  display: flex;
  color: #000;
  font-size: 28rpx;
  justify-content: space-evenly;
}
.expert-price{
  color: red;
  font-weight: 700;
  font-size: 32rpx;
}
