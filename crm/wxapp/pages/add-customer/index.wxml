                            data-f="4"
                            bind:change="onChangeData"
                    />
                    <van-field
                            value="{{yearSalary}}"
                            label="年收入"
                            type="number"
                            placeholder="请输入"
                            data-f="5"
                            bind:change="onChangeData"
                    />
                    <van-field
                            value="{{address}}"
                            label="住址"
                            placeholder="请输入"
                            data-f="6"
                            bind:change="onChangeData"
                    />
                    <van-field
                            value="{{remark}}"
                            label="备注"
                            placeholder="请输入"
                            data-f="7"
                            bind:change="onChangeData"
                    />
                </van-cell-group>
