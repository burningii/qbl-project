page{
  font-family: "Microsoft YaHei","\5b8b\4f53",sans-serif,tahoma;
  background: #fff;
}
.item-wrap{
  padding: 20rpx;
}
.item-top{
  height: 60rpx;
  display: flex;
  align-items: center;
}
.item-top image{
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
}
.item-top text{
  font-size: 32rpx;
  color: #8296a0;
}
.item-txt{
  padding: 20rpx 0;
  width: 100%;
  height: 184rpx;
  position: relative;
}
.item-txt textarea{
  border: 2rpx solid #c6d1d9;
  width: 100%;
  box-sizing: border-box;
  padding: 20rpx;
  height: 160rpx;
  resize: none;
  outline: none;
  font-size: 26rpx;
  line-height: 1.5;
  color: #333;
}
.item-txt text{
  position: absolute;
  right: 40rpx;
  bottom: 20rpx;
  font-size: 24rpx;
}
.item-bottom-wrap{
  margin-top: 40rpx;
  width: 100%;
  height: 510rpx;
  border: 2rpx solid #c6d1d9;
  box-sizing: border-box;
  padding: 20rpx;
}
.item-bottom-wrap textarea{
  width: 100%;
  height: 180rpx;
  border-bottom: 2rpx solid #c6d1d9;
}
tip{
  color: #c6d1d9;
  font-size: 26rpx;
}
.type-choose{
  display: flex;
  justify-content: flex-start;
  flex-direction: row-reverse;
}
.type-choose text{
  padding: 20rpx 10rpx;
  font-size: 24rpx;
}
.selected{
  color: #4aca6d;
  border-bottom: 2rpx solid #4aca6d;
}
.uploadImage{
  padding-top: 20rpx;
}
.uploadImage image,.uploadVideo image,.uploadRadio image{
  position: relative;
  width: 180rpx;
  height: 180rpx;
  border: 2rpx dotted #ccc;
  border-radius: 10rpx;
  margin-right: 20rpx;
}
.uploadImage image text{
  position: absolute;
  right: 0rpx;
  top:0;
  line-height:1;
  padding: 0 10rpx;
  font-size: 48rpx;
  background: #4aca6d;
  color: #fff;
  z-index: 100;
}
.uploadVideo video{
  width: 180rpx;
  height: 180rpx;
}
.videoWrap{
  display: flex;
  height: 240rpx;
  justify-content: flex-start;
  align-items: center;
}
.videoWrap video{
  margin-right: 20rpx;
}
.videoWrap .delVideo,.delRadio{
  display: inline-block;
  background: #4aca6d;
  color: #fff;
  padding: 10rpx 20rpx;
  font-size: 24rpx;
}
.delRadio{
  margin-top: -20rpx;
  margin-left: 20rpx;
}
.radio-wrap{
  width: 180rpx;
  height: 220rpx;
  display: inline-block;
  padding-bottom: 20rpx;
}
.radio-wrap text{
   display: block;
   color: #4aca6d;
   font-size: 24rpx;
   text-align: center;
}
.submit-btn{
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  background: #4aca6d;
  color:#fff;
  font-size: 28rpx;
  border-radius: 0;
  width: 160rpx;
  height: 60rpx;
  line-height: 60rpx;
  border:none;
  outline: none;
}
.btn-wrap{
  position: relative;
}
