<view class="add-customer-container">
    <van-collapse value="{{ activeNames }}" bind:change="onChangeColl">
        <van-collapse-item title="本人" name="1">
            <view class="section1">
                <van-cell-group>
                    <van-field
                            value="{{myName}}"
                            label="姓名"
                            placeholder="请输入"
                            data-f="32"
                            bind:change="onChangeData"
                    />
                    <van-field
                            value="{{MyBirthday}}"
                            label="出生日期"
                            placeholder="点击选择日期"
                            disabled
                            data-f="1"
                            bindtap="showMyBirthdayModal"
                    />
                    <van-field
                            value="{{lunarBirthday}}"
                            label="农历生日"
                            placeholder="格式:19990312"
                            data-f="1"
                            bind:change="onChangeData"
                    />
                    <van-field
                            value="{{mySmockFlag}}"
                            label="是否吸烟"
                            disabled
                            data-f="1"
                            bindtap="showMySmockModal"
                            placeholder="点击选择日期"

                    />
                    <van-field
                            value="{{myDrinkFlag}}"
                            label="是否喝酒"
                            disabled
                            data-f="1"
                            bindtap="showDrinkModal"
                            placeholder="点击选择日期"

                    />
                    <van-field
                            value="{{bodyStatus}}"
                            label="身体状况"
                            data-f="2"
                            bind:change="onChangeData"
                            placeholder="请输入"

                    />
                    <van-field
                            value="{{Social}}"
                            label="有无社保"
                            placeholder="点击选择"
                            disabled
                            data-f="1"
                            bindtap="showMySocialModal"
                    />
                    <van-field
                            value="{{myHometown}}"
                            label="老家"
                            placeholder="请输入"
                            data-f="33"
                            bind:change="onChangeData"
                    />
                    <van-field
                            value="{{industryFlag}}"
                            label="行业"
                            placeholder="请输入行业"
                            data-f="3"
                            bind:change="onChangeData"
                    />
                    <van-field
                            value="{{companyName}}"
                            label="公司名称"
                            placeholder="请输入"
                            data-f="34"
                            bind:change="onChangeData"
                    />
                    <van-field
                            value="{{companyJob}}"
