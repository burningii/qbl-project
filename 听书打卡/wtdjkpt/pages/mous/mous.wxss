page{
  background: #fff;
}
.item-status{
  display:flex;
  justify-content: flex-start;
  flex-direction: row-reverse;
  align-items:center;
  border-bottom: 1rpx solid #ddd;
}
.item-status-til{
  margin-right: 160rpx;
}
.noselect{
  padding: 20rpx;
  font-size: 24rpx;
}
.selected{
  border-bottom: 2rpx solid #4aca6d;
}
.scroll{
  height: 1040rpx;
}
.item-wrap{
  padding: 20rpx;
  /* border: 1rpx solid #ccc; */
}
.item-group{
  padding: 0 20rpx;
  display: flex;
  height: 80rpx;
  line-height: 80rpx;
  justify-content: flex-start;
  font-size: 32rpx;
  margin-bottom: 10rpx;
}
.item-group-left1{
  font-size: 24rpx;
  color: red;
}
.item-group-left2{
  width: 180rpx;
  text-align: right;
  margin-right: 20rpx;
  color: #666;
  font-family: Tahoma, Helvetica, "Microsoft Yahei", 微软雅黑, Arial, STHeiti;
}
.item-group-right{
    display: flex;
  align-items: center;
}
.item-group-right{
  width: 400rpx;
  padding-left: 20rpx;
  border-bottom: 2rpx solid #ddd;
  color: #666;
}
.tips{
  font-size: 28rpx;
  color: #999;
}
.work-experience{
  margin-left: 220rpx;
  width: 420rpx;
  padding: 20rpx;
  height: 226rpx;
  border: 2rpx solid #ddd;
}
.work-experience textarea{
  width: 100%;
  height: 100%;
  font-size: 28rpx;
  color: 666;
}
.btn-submit{
  position: fixed;
  left: 50%;
  bottom: 20rpx;
  transform: translateX(-280rpx);
  width: 560rpx;
  height: 100rpx;
  background: #4aca6d;
  color: #fff;
  text-align: center;
  line-height: 100rpx;
  border-radius: 10rpx;
}
.upload-box{
  padding-left: 220rpx;
}
.upload-box image{
  position: relative;
  width: 160rpx;
  height: 160rpx;
  margin-right: 20rpx;
}
.del{
  position: absolute;
  width: 20rpx;
  height: 20rpx;
  text-align: center;
  line-height: 20rpx;
  top: 0;
  right: 0;
  background: #4aca6d;
  color: #fff;
  z-index: 100;
}
radio{
  transform: scale(0.7);
}
checkbox{
  transform: scale(0.7);
}
.skills{
  margin-left: 220rpx;
  width: 420rpx;
  padding: 20rpx;
  border: 2rpx solid #ddd;
}