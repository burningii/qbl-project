page{
  background: #fff;
}
.item-wrap{
  padding: 20rpx;
}
.item-top{
  padding: 20rpx 0;
  display: flex;
  justify-content: space-between;
}
.expert-classify{
  font-size: 32rpx;
  color: #000;
}
.item-group{
  margin-bottom: 20rpx;
  height: 140rpx;
  display: flex;
  justify-content: flex-start;
}
.item-left{
  display: flex;
  align-items: center;
  margin-right: 20rpx;
}
.item-left image{
  width: 80rpx;
  height: 80rpx;
  border: 2rpx solid red;
  border-radius: 50%;
}
.item-right{
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f93;
  flex:1;
  display: flex;
  justify-content: space-between;
}
.item-content{
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
}
.item-info{
  font-size: 24rpx;
  color: #fff;
  display: flex;
  justify-content: space-between;
  flex-direction: column;
}
.item-ask,.item-expertInfo{
  background: #f93;
  padding: 0 10rpx;
  text-align: center;
}
.item-name{
  font-size: 28rpx;
  color: #000;
}
.item-tel,.item-area{
  font-size: 26rpx;
  color: #666;
}