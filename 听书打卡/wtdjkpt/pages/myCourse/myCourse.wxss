.lession-item{
    background-color: #fff;
    margin-top: 10px;
    padding: 12px;
    width: 100%;
    align-items: flex-start;
    position: relative;
}

.img-item{
    width: 30%;
    height: 190rpx;
}

.lession-item-right{
    width: 70%;
    padding-left: 100rpx;
    font-size: 27rpx;
    color: #888888;
    line-height: 50rpx;
    word-break:break-all;
    word-wrap:break-word;
}
.lession-info{
    position: absolute;
    right: 15rpx;
    bottom: 10rpx;
    font-size: 24rpx;
    color: #888888;
}
.item-title{
    font-size: 32rpx;
    color: #000000;
}